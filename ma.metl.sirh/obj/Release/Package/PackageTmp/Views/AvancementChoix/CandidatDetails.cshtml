@model IEnumerable<ma.metl.sirh.Model.Dto.CandidatResultatDto>
@{
    Layout = null;
    ViewBag.Title = "Détails Candidat";
}


<div class="row">

    <table style="border-collapse:collapse; width:100%;">
        <thead>
            <tr>
                <th rowspan="2" style="border: solid 1px black; padding: 10px; "><div align="center">مديرية الانتماء</div></th>
                <th rowspan="2" style="border: solid 1px black; padding: 10px; "><div align="center">قرار الوزير</div></th>
                <th rowspan="2" style="border: solid 1px black; padding: 10px; "><div align="center">رأي اللجنة</div></th>
                <th colspan="3" style="border: solid 1px black; padding: 10px; "><div align="center">الوضعية الادارية المقترحة: @ViewBag.ArabicNewGradeName</div></th>
                <th colspan="4" style="border: solid 1px black; padding: 10px; "><div align="center">الوضعية الادارية الحالية: @ViewBag.ArabicOldGradeName</div></th>
                <th rowspan="2" style="border: solid 1px black; padding: 10px; "><div align="center">رقم التأجير</div></th>
                <th rowspan="2" style="border: solid 1px black; padding: 10px; "><div align="center">الاسم الشخصي و العائلي</div></th>
            </tr>
            <tr>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">تاريخ فعالية التسمية</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">رأح</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">الرتبة</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">الأقدمية في الرتبة</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">رأح</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">الرتبة</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">الأقدمية في الدرجة</div></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.Direction)</td>
                    <td style="border: solid 1px black; padding: 10px; ">
                        @if (item.Statut.ToLower().Equals("valide")) {
                            <Text>موافق</Text>
                        }
                        @if (item.Statut.ToLower().Equals("en cours"))
                        {
                            <Text>جار</Text>
                        }
                    </td>
                    <td style="border: solid 1px black; padding: 10px; ">
                        @if (item.DecisionCap.ToLower().Equals("promu"))
                        {
                            <Text>يرقى</Text>
                        }
                        @if (item.DecisionCap.ToLower().Equals("non promu"))
                        {
                            <Text>لا يرقى</Text>
                        }
                        @if (!item.DecisionCap.ToLower().Equals("non promu") && !item.DecisionCap.ToLower().Equals("promu"))
                        {
                            <Text>غير محدد</Text>
                        }
                    </td>

                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.DateEffet)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.NouveauGradeCadreCode)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.NouveauGradeCode)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.AncienneteEchelon)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.AncienGradeCadreCode)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.AncienGradeCode)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.AncienneteGrade)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.NumDoti)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.PrenomA) @Html.DisplayFor(modelItem => item.NomA)</td>
                </tr>
            }
        <tbody>
    </table>





</div>
