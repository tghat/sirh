@model ma.metl.sirh.Model.ViewModel
@{
    Layout = null;

}

<div class="row">
    <div class="col-md-4 col-md-offset-0">

        @Html.Label("msgInfo", "", new { @class = "form-control" }) @Html.ValidationMessage("msgInfo", new { @style = "color:green" })

    </div>
    <div class="col-md-4 col-md-offset-0">

        @Html.Label("msgErreur", "", new { @class = "form-control" }) @Html.ValidationMessage("msgErreur", new { @style = "color:red" })

    </div>
    </div>

    <form name="form-situationCandidat" id="form-situationCandidat" action="EnregistrerReunion" method="post" class="form-horizontal" enctype="multipart/form-data">

        <div class="form-group">
            <div class="col-md-3">
                <label>Ordre du jour : </label>
            </div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Reunion.OrdreJour, new { rows = 2, @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Observations : </label>
            </div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Reunion.Observation, new { rows = 2, @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Décisions prises : </label>
            </div>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Reunion.Decisions, new { rows = 2, @class = "form-control" })
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-3">
                <label for="dateReunion">Date réunion:</label>
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Reunion.DateReunion, DateTime.Now.ToString("d"), new { @class = "form-control datepicker" })
            </div>


        </div>
        <div class="form-group">

            <div class="col-md-3">
                <label for="pvCommission">PV de la commission:</label>
            </div>
            <div class="col-md-3">
                <input class="form-control" name="flux" type="file" />
            </div>


        </div>
        <div class="b-right">
            <div class="modal-footer">
                <input type="submit" value="Enregistrer" class="btn btn-custom" />
            </div>
        </div>
    </form>
