
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Reporting</h1>
    </div>
    <!-- /.col-md-12 -->
</div>
<div class="row">

    <fieldset class="col-md-10 col-md-offset-1">

        <legend>Critères de Recherche</legend>
        <form name="form-recherche" id="form-recherche" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-3">
                    <label for="delegation">Délégation :</label>
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="delegation" id="delegation">
                        <option value="0">---- S&eacute;lectionnez ----</option>
                        <option value="1">Délégation 1</option>
                        <option value="2">Délégation 2</option>
                        <option value="3">Délégation 3</option>
                        <option value="4">Délégation 4</option>
                        <option value="5">Délégation 5</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="delegation">Rapport :</label>
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="delegation" id="delegation">
                        <option value="0">---- S&eacute;lectionnez ----</option>
                        <option value="1">Nombre de réclamations enregistrées </option>
                        <option value="2">Nombre de réclamations traitées</option>
                        <option value="3">Taux de réclamations par type</option>
                        <option value="4">Taux de réclamations par direction</option>
                        <option value="5">Délai moyen de clôture des réclamations</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="dateDemande">Date du :</label>
                </div>
                <div class="col-md-3">
                    <input class="form-control dateFrom" name="dateDeb" type="text" value="" />
                </div>
                <div class="col-md-3">
                    <label for="dateDemande">au :</label>
                </div>
                <div class="col-md-3">
                    <input class="form-control dateTo" name="dateFin" type="text" value="" />
                </div>
            </div>

        </form>
        <div class="b-right">
            <a class="btn btn-custom" href="#">
                <i class="fa fa-print"></i>
                Imprimer
            </a>
            <a class="btn btn-custom" href="#">
                <i class="fa fa-undo"></i>
                Réinitialiser
            </a>
        </div>

    </fieldset>
