
@{
    ViewBag.Title = "Administration";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Administration</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@{var roles = Session["listRoles"] as List<string>;}
<div class="row">
    
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
       @if (roles.Contains("Adm_Profil_Creation") || roles.Contains("Adm_Profil_Modification")
            || roles.Contains("Adm_Profil_Consultation") || roles.Contains("Adm_Profil_Suppression"))
       {
        <li class="active">
            <a href="#manage-profil" >Gestion des profils</a>
        </li>
       }
       @if (roles.Contains("Adm_User_Creation") || roles.Contains("Adm_User_Creation")
            || roles.Contains("Adm_User_Consultation") || roles.Contains("Adm_User_Suppression"))
       {
        <li>
            <a href="~/Users/AdministrationUsers" >Gestion des utilisateurs</a>
        </li>
       }
    </ul>
    
<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane fade  in active" id="manage-profil">
        @RenderPage("Profils.cshtml")      
    </div>      
</div>
</div>

