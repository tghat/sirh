@model ma.metl.sirh.Model.Users
@{
    ViewBag.Title = "AjoutUtilisateur";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Administration</h1>
    </div>
    <!-- /.col-md-12 -->
</div>
<div class="row">
    <fieldset class="col-md-10 col-md-offset-1">
        <legend>Nouvel Utilisateur</legend>
        <form name="form" id="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-4">
                    Login
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Login)
                </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Mot de passe
                </div>
                <div class="col-md-4">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Confirmation du mot de passe
                </div>
                <div class="col-md-4">
                    @Html.PasswordFor(model => model.ConfirmationPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ConfirmationPassword)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Nom
                </div>
                <div class="col-md-4">
                    <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                     @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Pr&eacute;nom
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prenom)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Email
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Direction
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("Direction", String.Empty, new { @class = "" });
                    @* @Html.TextBoxFor(model => model.ProfilId, new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(model => model.Direction);
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Service
                </div>
                <div class="col-md-4">
                    <select class="form-control" name="select" id="select">
                        <option>-----------S&eacute;lectionnez---------</option>
                        <option value="1">Service 1</option>
                        <option value="2">Service 2</option>
                        <option value="3">Service 3</option>
                        <option value="4">Service 4</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Profil
                </div>
                <div class="col-md-4">
                    <select class="form-control" name="select" id="select">
                        <option>-----------S&eacute;lectionnez---------</option>
                        <option value="1">Administrateur</option>
                        <option value="2">Utilisateur </option>
                        <option value="3">Gestionnaire</option>
                        <option value="4">Vérificateur</option>
                        <option value="5">Validateur</option>
                        <option value="6">Candidat</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    Statut
                </div>
                <div class="col-md-4">
                    <select class="form-control" name="select2" id="select2">
                        <option value="1">Actif</option>
                        <option value="2">Inactif</option>
                    </select>
                </div>
            </div>
            <p class="b-right">
                <a class="btn btn-custom btn-xs" href="Administration" tabindex="manage-user" title="Retour">
                    <i class="fa  fa-arrow-left"></i>
                </a>
                <a class="btn btn-custom btn-xs"  href="#" title="Enregistrer">
                    <i class="fa fa-save"></i>
                </a>
            </p>
        </form>
    </fieldset>
</div>		

