@model ma.metl.sirh.Model.Users
@{
    ViewBag.Title = "ConsulterUtilisateurs";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Administration</h1>
    </div>
    <!-- /.col-md-12 -->
</div>
<div class="row">
    <fieldset class="col-md-10 col-md-offset-1">
        <legend>Consultation Utilisateur</legend>
        <form name="form" id="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-4">
                    <label> login </label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label> Mot de passe </label> 
                </div>
                <div class="col-md-4">
                   @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @readonly = "readonly", @Type = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label> Confirmation du mot de passe </label>                     
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.ConfirmationPassword, new { @class = "form-control", @readonly = "readonly", @Type = "Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Nom </label>
                        
</div>
                <div class="col-md-4">
                    <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>pr&eacute;nom </label> </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Email </label>
</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Direction</label>
</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Direction.Description,null, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Service </label> 
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Service.Description, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Profil </label>
</div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Profil.Libelle, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Statut </label>
</div>
                <div class="col-md-4">
                    
                   @Html.TextBox("Stat",null,new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <p class="b-right">
                <a class="btn btn-custom btn-xs" href="AdministrationUsers" title="Retour">
                    <i class="fa  fa-arrow-left"></i>
                </a>
                @*<a class="btn btn-custom btn-xs" href="ModifierUtilisateur?Login=@Request["Login"]" title="Editer">
                    <i class="fa fa-edit"></i>
                </a>*@
            </p>
        </form>
    </fieldset>
</div>		
