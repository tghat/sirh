@model ma.metl.sirh.Model.Users
@{
    ViewBag.Title = "MonCompte1";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">Mon compte</h1>
    </div>
    <!-- /.col-md-12 -->
</div>
<form name="form" id="form" action="" method="post" class="form-horizontal">
    <div class="row">
        <fieldset class="col-md-10 col-md-offset-1">
            <legend>Compte Utilisateur</legend>
         
          

               @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <div class="col-md-4">
                    <label>Login</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Mot de passe</label>
                </div>
                <div class="col-md-4">

                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @readonly = "readonly", @Type = "Password" })  @Html.ValidationMessage("Oldpass", new { @style = "color:red" })
                </div>
                <div class="col-md-4">
                    <a class="btn btn-custom" href="javascript:popup('change-password');" title="Modifier Mot de passe">
                        <i class="fa fa-edit"></i>
                        Modifier Mot de passe
                    </a>
                </div>
            </div>
            <!--<div class="form-group">
                <div class="col-md-4"><label>Confirmation du mot de passe</label>
                </div>
                <div class="col-md-4">
                    <input name="login3" type="password" class="form-control" id="login3" value="motdepasse" />
                </div>
            </div>
            -->
            <div class="form-group">
                <div class="col-md-4">
                    <label>Nom</label>
                </div>
                <div class="col-md-4">
                    <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Pr&eacute;nom</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Email</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Direction</label> 
                </div>
                <div class="col-md-4">
                @Html.DropDownList("DirectionId", null, new { @class = "form-control", @readonly = "readonly" })
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Service</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("ServiceId", null, new { @class = "form-control", @readonly = "readonly" })
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Profil</label>
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("ProfilId", null, new { @class = "form-control",@readonly="readonly" })               
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Statut</label>
                </div>
                <div class="col-md-4">
                  @Html.TextBox("Stat", null, new { @class = "form-control" ,@readonly="readonly"})
                </div>
            </div>
            <p class="b-right">
                <a class="btn btn-custom" href="~/Home" title="Retour">
                    <i class="fa  fa-arrow-left"></i>
                </a>
                
                
                   
             
            </p>

        </fieldset>
    </div>   
    <!-- ************* Définition des Popups de la page ************* -->
    <!-- **** changement mot de passe  **** -->
    <div id="change-password" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modifier Mot de passe</h4>
                </div>
                <div class="modal-body">
                    @*<form name="form-change-password" id="form-change-password" action="" method="post" class="form-horizontal">*@
                    @*@using (Html.BeginForm("MonCompte", "Users"))
                        {*@

                    <div class="form-group">
                        <div class="col-md-5">
                            <label for="oldPass">Mot de passe actuel</label>
                        </div>

                        <div class="col-md-4">
                            @Html.Password("oldpass")
                            @* <input name="oldPass" type="password" class="form-control" id="oldPass" value="" />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            <label for="newPass">Nouveau Mot de passe</label>
                        </div>
                        <div class="col-md-4">
                            @Html.Password("newpass")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5">
                            <label for="newPass2">Confirmation nouveau mot de passe</label>
                        </div>
                        <div class="col-md-4">
                            @Html.Password("newpass2")
                        </div>
                    </div>
                    @*</form>*@  @*}*@
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Enregistrer" class="btn btn-custom" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal --> 
</form>