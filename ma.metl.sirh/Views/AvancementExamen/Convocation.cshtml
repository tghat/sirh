@model Tuple<ma.metl.sirh.Model.Candidat, ma.metl.sirh.Model.DetailAvancement, ma.metl.sirh.Model.Examen, IEnumerable<ma.metl.sirh.Model.Dto.MatiereDto>>
@{
    Layout = null;
    ViewBag.Title = "Convocation";
}


<div class="row">

    <p align="center">@Html.DisplayFor(model => model.Item1.Prenom)  @Html.DisplayFor(model => model.Item1.Nom)</p>
    <p align="center">PPR : @Html.DisplayFor(model => model.Item1.NumDoti)</p>
    <p align="center">S/C</p>
    <p align="center">Madame la directrice</p>
    <p align="center">des Equipements Publics</p>
    <p align="center">Rabat</p>
    <br />
    <br />
    <p align="justify">Objet : Examen d'aptitude professionnelle pour l'accès au grade @Html.DisplayFor(model => model.Item2.NouveauGrade.Description) </p>
   
    <p align="justify">En relation avec le sujet cité ci-dessus, je vous demande de bien vouloir vous présenter muni de votre carte nationale d'identité et de la présente convocation, à @Html.DisplayFor(model => model.Item3.Direction.Description),</p>
    <p align="justify">Il s'agit de l'examen d'aptitude professionnelle pour accèder au grade @Html.DisplayFor(model => model.Item2.NouveauGrade.Description), Option:, dont l'épreuve écrite se déroulera selon le calendrier suivant :</p>



    <table style="border-collapse:collapse; width:100%;">
        <thead>
            <tr>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">Matière </div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">Jour</div></th>
                <th style="border: solid 1px black; padding: 10px; "><div align="center">Coefficient</div></th>
                <th style ="border: solid 1px black; padding: 10px; "><div align="center">Durée</div></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item4)
            {
                <tr>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.Intitule)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.JourDateMatiere)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.Coefficient)</td>
                    <td style="border: solid 1px black; padding: 10px; ">@Html.DisplayFor(modelItem => item.HeureDebutH)</td>
                </tr>
            }
        <tbody>
    </table>





</div>
